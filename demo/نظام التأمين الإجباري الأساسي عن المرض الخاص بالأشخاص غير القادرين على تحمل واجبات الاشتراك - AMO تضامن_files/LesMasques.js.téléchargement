function confirm_delete()
{
  if (confirm("هل أنت متأكد من رغبتك في الحذف ؟" )==true)
    return true;
  else
    return false;
}
 //------------------------------------------------------------------
function confirm_save()
{
  if (confirm("هل تريد فعلا حفظ هذه المعلومات ؟")==true)
    return true;
  else
    return false;
}
