function ToggleLoader(msg = "المرجو الإنتظار ...", active) {

    $(document).ready(function () {
        //console.log(msg);

        if (active !== 'hide') {
            $('#loaderModalMsg').html(msg);
            $('#loaderModal').modal('show');
            //console.log(active);
        } else {
            setTimeout(() => {
                $('#loaderModalMsg').html(msg);
                $('#loaderModal').modal('hide');
            }, 500);

        }

    })

}

function ToggleLoaderClient(msg = "المرجو الإنتظار ...", active) {

    var isInfosFormulaireValid = Page_ClientValidate("Infos_Rech");
    //console.log({ isInfosFormulaireValid });
    //console.log({ isInfosEnfantsValid });
    if (isInfosFormulaireValid) {
        $(document).ready(function () {
            //console.log(msg);

            if (active !== 'hide') {
                $('#loaderModalMsg').html(msg);
                $('#loaderModal').modal('show');
                //    console.log(active);
            } else {
                setTimeout(() => {
                    $('#loaderModalMsg').html(msg);
                    $('#loaderModal').modal('hide');
                }, 500);

            }

        })
    }

}


function SwalMsg(msg = "", titre = "خطأ", ico = "info", redirectUrl = "", waitTime = 1500) {
    var btnColor = "#20406E";
    switch (ico) {
        case "info":
            btnColor = "#20406e"
            break;
        case "success":
            btnColor = "#005509"
            break;
        case "error":
            btnColor = "#f70000"
            break;
        case "warning":
            btnColor = "#eb920c"
            break;
        case "question":
            btnColor = "#3ba49e"
            break;
        default:
    }
 
    Swal.fire({
        title: titre,
        text: msg,
        icon: ico,
        confirmButtonColor: btnColor,
        confirmButtonText: "إغلاق",
        timer: waitTime
    }).then(function () { 
        if (redirectUrl !== "") {
            window.location.href = redirectUrl;
        }
    });

}